<h1>Gallery</h1>

    <% @posts.each do |post| %>
    <% favorites_count = Favorite.where(post_id: post.id).count %>
      <div class="image_area">
        <%= link_to post, class: "image" do %>
          <%= image_tag post.image %>
          <p class="image_text"><i class="fas fa-heart"> <%= "#{favorites_count}ä»¶" %></i></p>
        <% end %>
      </div>
    <% end %>
